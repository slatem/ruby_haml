= if defined?(@post.errors) || @post.errors.any?
  .error
    %h2= pluralize(@post.errors.count, "error")
    %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
%form{:method=>"post" }
= form_for @post, url: posts_path do |f|
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :text
    %br
    = f.text_area :text
  %p= f.submit
%br